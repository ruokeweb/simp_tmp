.suspension-show {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 9;
}
.suspension-show .toastbg {
    opacity: 0.8;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
}
.suspension-show .showToast {
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    height: 760rpx;
}
.suspension-show .showToast image {
      width: 600rpx;
      height: 800rpx;
}
.suspension-show .showToast .close {
      width: 120rpx;
      height: 120rpx;
      position: relative;
      border: solid 1px #fff;
      border-radius: 50%;
      margin: 30rpx auto 0;
}
.suspension-show .showToast .close:before {
      position: absolute;
      content: "";
      width: 40px;
      height: 1px;
      background: #fff;
      -webkit-transform: rotate(-45deg);
              transform: rotate(-45deg);
      top: 0px;
      bottom: 0;
      margin: auto;
      left: 0;
      right: 0;
}
.suspension-show .showToast .close:after {
      position: absolute;
      content: "";
      width: 40px;
      height: 1px;
      background: #fff;
      -webkit-transform: rotate(45deg);
              transform: rotate(45deg);
      top: 0px;
      bottom: 0;
      margin: auto;
      left: 0;
      right: 0;
}

