
.detail_spacing{padding: 0 30rpx;}
.banner {
        height: 360rpx;
        overflow: hidden;
        position: relative;
        background-color: #ccc;
}
.banner-img {
        width: 100%;
}
.relation {
        font: 26rpx;
        font-weight: bold;
        margin-left: 20rpx;
}
.banner-title {
        max-height: 84rpx;
        overflow: hidden;
        position: absolute;
        left: 30rpx;
        bottom: 30rpx;
        width: 90%;
        font-size: 32rpx;
        font-weight: 400;
        line-height: 42rpx;
        color: white;
        z-index: 11;
}
.news-title {
        padding: 30rpx 0 0;
        font-size:32rpx;
		text-align: center;
}
.article-meta {
        padding: 0 40rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: horizontal;
        -webkit-box-direction: normal;
        -webkit-flex-direction: row;
            -ms-flex-direction: row;
                flex-direction: row;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
            -ms-flex-pack: center;
                justify-content: center;
        color: gray;
}
.article-content image {
        width: 100%;
        /* border-radius: 10upx; */
        display: block;
        margin: 20rpx auto;
}
.article-text {
        font-size: 26rpx;
        line-height: 50rpx;
        margin: 0 20rpx;
}
.article-author,
    .article-time {
        font-size: 30rpx;
}
.article-content {
        /* padding: 20upx; */
        overflow: hidden;
        font-size: 30rpx;
        margin-bottom: 30rpx;
        margin-left: 10rpx;
        margin-right: 10rpx;
}
.label {
        height: 40rpx;
        border-radius: 20rpx;
        width: 100rpx;
        text-align: center;
        color: #4c3915;
        float: left;
        font-size: 24rpx;
        line-height: 40rpx;
        background-image: -o-linear-gradient(left, rgba(243, 231, 200, 0.4) 0%, rgba(222, 196, 144, 0.4) 100%);
        background-image: -webkit-gradient(linear, left top, right top, from(rgba(243, 231, 200, 0.4)), to(rgba(222, 196, 144, 0.4)));
        background-image: linear-gradient(90deg, rgba(243, 231, 200, 0.4) 0%, rgba(222, 196, 144, 0.4) 100%);
        padding: 2rpx;
        margin-right: 10rpx;
}
.tips {
        padding: 30rpx;
}
.tips text {
        line-height: 1;
}
.relation-news {
        margin-top: 10rpx;
        color: #0451A5;
}

