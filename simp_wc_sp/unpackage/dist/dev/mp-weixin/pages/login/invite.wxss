
Page {
    background: #f2f2f2;
}
.content {
    padding: 70rpx 0;
    padding-bottom: 0;
}
.title {
    font-size: 54rpx;
    text-align: center;
    color: #4b505d;
}
.s_title {
    font-size: 36rpx;
    text-align: center;
    color: #4b505d;
    position: relative;
}
.s_line {
    width: 102rpx;
    height: 4rpx;
    background: #fbc351;
    margin: 10rpx auto;
}
.card {
    width: 90%;
    height: 300rpx;
    background: #fff;
    border-radius: 30rpx;
    margin: 10rpx auto;
    margin-top: 40rpx;
}
.left {
    width: 36%;
    display: inline-block;
    text-align: center;
    vertical-align: top;
    margin-top: 70rpx;
}
.left text {
    color: #4b505d;
    font-size: 30rpx;
    font-weight: bold;
}
.right {
    width: 55%;
    display: inline-block;
    margin-top: 28rpx;
    padding-left: 7%;
    padding-top: 32rpx;
    border-left: 4rpx dashed #eee;
    height: 230rpx;
}
.right view {
    color: #4b505d;
    font-size: 24rpx;
}
.mid_title {
    font-size: 36rpx;
    border-bottom: 1rpx solid rgb(234, 234, 234);
    padding-left: 5vw;
    height: 80rpx;
    margin-top: 20rpx;
    font-weight: bold;
}
.head {
    width: 140rpx;
    height: 140rpx;
    border-radius: 70rpx;
    display: block;
    margin: 0 auto;
}
.list-head {
    width: 98rpx;
    height: 98rpx;
    border-radius: 49rpx;
    margin-top: 10rpx;
}
.list {
    padding: 0 20rpx;
    height: 245rpx;
    overflow: auto;
}
.list-item {
    border-bottom: 1rpx solid #eaeaea;
    height: 120rpx;
}
.list-item-left {
    width: 15%;
    display: inline-block;
}
.list-item-right {
    width: 84%;
    display: inline-block;
    vertical-align: top;
    margin-top: 35rpx;
}
.list-item-right .name {
    margin-left: 10rpx;
}
.list-item-right .time {
    float: right;
    color: #999999;
}
.list-item text {}
.primary {
    width: 90%;
    margin-bottom: 20rpx;
}

