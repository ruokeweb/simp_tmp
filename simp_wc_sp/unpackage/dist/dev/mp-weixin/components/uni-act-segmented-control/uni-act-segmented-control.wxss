
.segmented {
		position: -webkit-sticky;
		position: sticky;
		top: 0 !important;
		z-index: 777;
}
.segmented-control {
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		background: #ffffff;
		-webkit-box-align: center;
		-webkit-align-items: center;
		    -ms-flex-align: center;
		        align-items: center;
		padding: 35rpx 0 10rpx 30rpx;
		border-bottom: 1rpx solid #EAEAEA;
}
.segmented-control-item {
			width: 178rpx;
			font-size: 30rpx;
}
.active {
			color: #333;
			font-weight: bold;
			font-size: 34rpx;
}
.line {
		width: 56rpx !important;
		height: 6rpx !important;
		background-color: #262f43;
		border-radius: 3rpx !important;
		position: absolute;
		top: 98rpx;
		left: 0;
		-webkit-transition: all 0.3s;
		-o-transition: all 0.3s;
		transition: all 0.3s;
}

