<view class="content"><view class="content_view"><view class="content_view_item"><text class="text_reg">照片</text><view class="input_reg"><block wx:if="{{truePhoto!=null||truePhoto!=''}}"><image class="tis-image" src="{{imagePath+truePhoto}}" mode="aspectFit" data-event-opts="{{[['tap',[['uploadtruePhoto',['$event']]]]]}}" bindtap="__e"></image></block><block wx:if="{{truePhoto==null||truePhoto==''}}"><image class="tis-image" src="/static/img/man_default.png" mode="aspectFit" data-event-opts="{{[['tap',[['uploadtruePhoto',['$event']]]]]}}" bindtap="__e"></image></block></view></view><view class="content_view_item"><text class="text_reg">姓名</text><input class="input_reg" style="width:60%;" placeholder-class="placeholderStyle" placeholder="请输入姓名" data-key="name" maxlength="30" data-event-opts="{{[['input',[['__set_model',['','name','$event',['trim']]]]],['blur',[['$forceUpdate']]]]}}" value="{{name}}" bindinput="__e" bindblur="__e"/></view><view class="content_view_item"><text class="text_reg">性别</text><picker class="input_reg" range-key="label" value="{{sexIndex}}" range="{{sexArr}}" data-event-opts="{{[['change',[['bindPickerChangeSex',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{sexArr[sexIndex].label}}</view></picker></view><view class="content_view_item"><text class="text_reg">证件类型</text><picker class="input_reg" range-key="label" value="{{cardIndex}}" range="{{cardtypeArr}}" data-event-opts="{{[['change',[['bindPickerChangeCardType',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{cardtypeArr[cardIndex].label}}</view></picker></view><view class="content_view_item"><text class="text_reg">证件号码</text><input class="input_reg" style="width:50%;" placeholder-class="placeholderStyle" placeholder="请输入证件号码" data-key="cardNum" maxlength="30" data-event-opts="{{[['input',[['__set_model',['','cardNum','$event',['trim']]]]],['blur',[['$forceUpdate']]]]}}" value="{{cardNum}}" bindinput="__e" bindblur="__e"/></view><view class="content_view_item"><text class="text_reg">出生年月</text><picker class="input_reg" value="{{birthday}}" mode="date" data-event-opts="{{[['change',[['bindPickerBirthday',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{birthday}}</view></picker></view><view class="content_view_item"><text class="text_reg">民族</text><picker class="input_reg" range-key="label" value="{{nationIndex}}" range="{{nationArr}}" data-event-opts="{{[['change',[['bindPickerChangeNation',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{nationArr[nationIndex].label}}</view></picker></view><view class="content_view_item"><text class="text_reg">身份</text><picker class="input_reg" range-key="label" value="{{typeIndex}}" range="{{typeArr}}" data-event-opts="{{[['change',[['bindPickerChangeType',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{typeArr[typeIndex].label}}</view></picker></view><view class="content_view_item"><text class="text_reg">政治面貌</text><picker class="input_reg" range-key="label" value="{{politicsIndex}}" range="{{politicsArr}}" data-event-opts="{{[['change',[['bindPickerChangePolitics',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{politicsArr[politicsIndex].label}}</view></picker></view><view class="content_view_item"><text class="text_reg">是否可被检索</text><switch class="switch" checked="{{checked}}" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view></view><view class="input-row" style="margin-top:120rpx;"><button class="primary btn_dark bottom-but" type="primary" disabled="{{saveDisable}}" data-event-opts="{{[['tap',[['saveBase',['$event']]]]]}}" bindtap="__e">保存</button></view></view>