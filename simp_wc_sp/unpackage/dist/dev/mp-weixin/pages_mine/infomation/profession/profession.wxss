.uni-left {
        width: 80%;
        float: left;
}
.uni-right {
        width: 17%;
        float: right;
        padding-left: 50rpx;
        border-left: 1rpx solid #e5e5e5;
}
.uni-text {
        color: #999;
        overflow: hidden;
        -o-text-overflow: ellipsis;
           text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
}
.con-left {
        display: inline-block;
        width: 25%;
        position: relative;
        left: 20rpx;
        bottom: 50rpx;
}
.right-info {
        display: inline-block;
        width: 70%;
}
.info-main {
        height: 70rpx !important;
        overflow: hidden;
        line-height: 1.2;
        padding-top: 20rpx;
}
.button {
        width: 100rpx;
        height: 40rpx;
        line-height: 40rpx;
        border-radius: 20rpx;
        border: solid 2rpx rgba(225, 182, 91, 0.4);
        text-align: center;
}
.default.button {
        background-image: -webkit-gradient(linear,
            left bottom, left top,
            from(rgba(243, 231, 200, 0.4)),
            to(rgba(222, 196, 144, 0.4)));
        background-image: -o-linear-gradient(bottom,
            rgba(243, 231, 200, 0.4) 0%,
            rgba(222, 196, 144, 0.4) 100%);
        background-image: linear-gradient(0deg,
            rgba(243, 231, 200, 0.4) 0%,
            rgba(222, 196, 144, 0.4) 100%);
        border: none;
}
.uni-edit {
        font-size: 30rpx;
        color: #999;
}
.con {
        height: calc(100vh - 180rpx);
        overflow-y: auto;
}
.btn-con {
        width: 90vw;
        position: absolute;
        bottom: 70rpx;
        left: 5vw;
}

